<UserControl x:Class="EasyEnglishWPF.Pages.EditDatabase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyEnglishWPF.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="790" Height="440" Margin="5">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Height="100">
            <Button Content="Dodaj" Width="100" Height="50" Margin="5" />
            <Button Content="Usun" Width="100" Height="50" Margin="5" />
            <Button Content="Edytuj" Width="100" Height="50" Margin="5"/>
        </WrapPanel>
        <StackPanel DockPanel.Dock="Left" Width="150">
            <StackPanel Name="Add">
                <Label Name="OpenQ" Margin="10,20,10,10"/>
                <TextBox Name="OpenA" Margin="10,50,10,10"/>
                <Button Content="Answer" Margin="10"/>
            </StackPanel>
            <StackPanel Name="Edit">
               
                
            </StackPanel>
        </StackPanel>
        <ListView Name="Data">
            
        </ListView>
    </DockPanel>
</UserControl>
